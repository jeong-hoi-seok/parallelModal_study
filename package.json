{
  "name": "nextjs_boilerplate",
  "description": "nextjs setting을 보다 쉽고 빠르게",
  "version": "0.5.0",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/jeong-hoi-seok/nextjs-boilerplate.git"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier:format": "prettier --write .",
    "prettier:check": "prettier --check .",
    "eslint:format": "eslint src --fix",
    "eslint:check": "eslint . --ext ts --ext tsx --ext js",
    "lint": "next lint",
    "postinstall": "husky install",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "cookies-next": "^4.2.1",
    "next": "14.2.7",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.3",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.8",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.43",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwind-scrollbar": "3.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn eslint:format"
  }
}
